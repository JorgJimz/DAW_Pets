@model IEnumerable<DAW_Pets.Models.Mascota>
@using DAW_Pets.Models.Helpers;
@using System.Security.Claims;
<style>
    .badge-pets {
        position: relative;
        color: white !important;
    }

    .badge-border-warning {
        border: 5px solid;
        border-color: #f6c23e;
    }

    .badge-border-danger {
        border: 5px solid;
        border-color: #dc3545;
    }
</style>
<section class="py-5 border-bottom" id="wall">
    <div class="text-center mb-5">
        <h1 class="fw-bolder text-black">Muro De Mascotas</h1>
        <p class="lead mb-0">¡Echa un vistazo a nuestros amigos peludos!</p>
    </div>
    <div class="container px-5 my-5">
        <div class="row gx-5">
            @foreach (Mascota m in Model)
            {
                <div class="col-lg-4 mb-5 mb-lg-0 text-center">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [100%x225]" src="@m.Imagen" data-holder-rendered="true" style="height: 225px; width: 100%; display: block;">
                        <div class="card-body">
                            <h2 class="h4 fw-bolder">@m.Nombre</h2>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button class="btn btn-pets-turquoise btn-sm btn-outline-secondary" onclick="showInPopup('@Url.Action("Details","Pet",new { id = m.Id })')">
                                        ¡Conóceme!
                                    </button>
                                </div>
                                <small class="text-muted badge @( m.Situacion.Equals("A")? "bg-warning":"bg-danger" ) text-light rounded-pill badge-pets">@(m.Situacion.Equals("A")? "Adóptame":"Me perdí")</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Modal -->
<div class="modal fade" id="DetailsModal" tabindex="-1" data-bs-keyboard="false" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" data-bs-backdrop="static">
        <div class="modal-content">
        </div>
    </div>
</div>