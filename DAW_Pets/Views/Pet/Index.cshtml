@using DAW_Pets.Models.Helpers;
@using System.Security.Claims;
<style>
    .badge-pets {
        position: relative;
        top: 20px;
    }

    .badge-border-warning {
        border: 5px solid;
        border-color: #f6c23e;
    }

    .badge-border-danger {
        border: 5px solid;
        border-color: #dc3545;
    }
</style>
<section class="py-5 border-bottom" id="wall">
    <div class="text-center mb-5">
        <h1 class="fw-bolder text-black">Muro De Mascotas</h1>
        <p class="lead mb-0">¡Echa un vistazo a nuestros amigos peludos!</p>
    </div>
    <div class="container px-5 my-5">
        <div class="row gx-5">
            <div class="col-lg-4 mb-5 mb-lg-0 text-center">
                <div class="text-center">
                    <h5 class="badge bg-danger text-light rounded-pill badge-pets">Me Perdí</h5>
                    <p></p>
                    <img class="img-fluid rounded-circle mb-4 badge-border-danger" src="https://www.androidfreeware.net/img2/com-dogsimulator-rottweiler.jpg" alt="...">
                </div>
                <h2 class="h4 fw-bolder">Rocky</h2>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary btn-lg px-4 me-sm-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    ¡Conóceme!
                </button>
            </div>
            <div class="col-lg-4 mb-5 mb-lg-0 text-center">
                <div class="text-center">
                    <h5 class="badge bg-warning text-dark rounded-pill badge-pets">Adóptame</h5>
                    <p></p>
                    <img class="img-fluid rounded-circle mb-4 badge-border-warning" src="https://gamehag.com/static/avatar/1914105_max.jpg" alt="...">
                </div>
                <h2 class="h4 fw-bolder">Duque</h2>
                <a class="btn btn-primary btn-lg px-4 me-sm-3" href="#features">¡Conóceme!</a>
            </div>
            <div class="col-lg-4 mb-5 mb-lg-0 text-center">
                <div class="text-center">
                    <h5 class="badge bg-danger text-light rounded-pill badge-pets">Me Perdí</h5>
                    <p></p>
                    <img class="img-fluid rounded-circle mb-4 badge-border-danger" src="https://pbs.twimg.com/profile_images/617810672953364480/FPDye7YZ_400x400.jpg" alt="...">
                </div>
                <h2 class="h4 fw-bolder">Max</h2>
                <a class="btn btn-primary btn-lg px-4 me-sm-3" href="#features">¡Conóceme!</a>
            </div>
        </div>
    </div>
</section>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-body p-0">
                <div class="slider">
                    <div>
                        <div>
                            <div class="row">
                                <div class="col-md-4 bg-warning p-5 text-center">
                                    <img class="img-fluid rounded-circle mb-4" src="https://www.androidfreeware.net/img2/com-dogsimulator-rottweiler.jpg" alt="...">
                                    <h2 class="fw-bolder text-black">Sobre mí</h2>
                                    <p>
                                        Rocky fue rescatado en Puente Piedra. Vivía en la calle y era alimentado por una vecina que nos pidio rescatarlo del abandono. Es jugueton, activo y sociable. Esta sano, vacunado, castrado y desparasitado.
                                    </p>
                                    <hr>
                                    <h2 class="fw-bolder text-black">Cámbiale la vida</h2>
                                    <ul class="list-unstyled">
                                        <li><a id="go-adopt" class="btn btn-info mb-2">Adóptame</a>      </li>
                                        <li><a id="go-profile" class="btn btn-info mb-2">Ver Perfil</a>                </li>
                                        <li><button type="button" class="btn btn-info" data-bs-dismiss="modal">Cerrar</button></li>
                                    </ul>
                                </div>
                                <div class="col-md-8">
                                    <h1 class="fw-bolder text-black">Rocky</h1>
                                    <h2 class="fw-bolder text-black">Experiencia</h2>
                                    <p>Some representative placeholder content for the three columns of text below the carousel. This is the first column.</p>
                                    <h2 class="fw-bolder text-black">Habilidades</h2>
                                    <p>Some representative placeholder content for the three columns of text below the carousel. This is the first column.</p>
                                    <div class="row">
                                        <div class="col-md-3"><h6>Tranquilidad</h6></div>
                                        <div class="col-md-9">
                                            <div class="progress">
                                                <div class="progress-bar bg-warning progress-bar-striped progress-bar-animated" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3"><h6>Independencia</h6></div>
                                        <div class="col-md-9">
                                            <div class="progress">
                                                <div class="progress-bar bg-warning progress-bar-striped progress-bar-animated" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100">30%</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3"><h6>Cariño</h6></div>
                                        <div class="col-md-9">
                                            <div class="progress">
                                                <div class="progress-bar bg-warning progress-bar-striped progress-bar-animated" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">80%</div>
                                            </div>
                                        </div>
                                    </div>
                                    <h2 class="fw-bolder text-black">Intereses</h2>
                                    <p>Some representative placeholder content for the three columns of text below the carousel. This is the first column.</p>
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="row">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="card">
                                        <h5 class="card-header">Datos Personales</h5>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-10">
                                                    <label class="form-label">Nombre Completo</label>
                                                    <input class="form-control form-control-sm" type="text" id="txtNomCom" value="@SessionHelper.GetValue(User,ClaimTypes.Name)" />
                                                </div>

                                                <div class="col-md-2">
                                                    <label class="form-label">Edad</label>
                                                    <input class="form-control form-control-sm" type="text" id="txtEdad" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <label class="form-label">Dirección</label>
                                                    <input class="form-control form-control-sm" type="text" id="txtDir" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <label class="form-label">Email</label>
                                                    <input class="form-control form-control-sm" type="text" id="txtEmail" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label class="form-label">Fijo</label>
                                                    <input class="form-control form-control-sm" type="text" id="txtTlf1" />
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="form-label">Celular</label>
                                                    <input class="form-control form-control-sm" type="text" id="txtTlf2" />
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="form-label">Trabajo</label>
                                                    <input class="form-control form-control-sm" type="text" id="txtTlf3" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card">
                                        <h5 class="card-header">Referencias</h5>
                                        <div class="card-body">
                                            <h5 class="card-title">Special title treatment</h5>
                                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                                            <a href="#" class="btn btn-primary">Go somewhere</a>
                                        </div>
                                    </div>
                                    <div class="card">
                                        <h5 class="card-header">Situación Personal</h5>
                                        <div class="card-body">
                                            <h5 class="card-title">Special title treatment</h5>
                                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                                            <a href="#" class="btn btn-primary">Go somewhere</a>
                                        </div>
                                    </div>
                                    <div class="card">
                                        <h5 class="card-header">Domicilio</h5>
                                        <div class="card-body">
                                            <h5 class="card-title">Special title treatment</h5>
                                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                                            <a href="#" class="btn btn-primary">Go somewhere</a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <h4>Es necesario que te registres para poder entrar a esta sección.</h4>
                                    <a id="go-profile" class="btn btn-info mb-2"> Ver Perfil</a>                                   
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="@Url.Content("~/js/jquery.diyslider.js")"></script>
    <script>
        $(function () {
            $(".slider").diyslider({
                width: "1500px", // width of the slider
                height: "680px", // height of the slider
                display: 1, // number of slides you want it to display at once
                loop: false // disable looping on slides
            }); // this is all you need!

            // use buttons to change slide
            $("#go-profile").bind("click", function () {
                // Go to the previous slide
                $(".slider").diyslider("move", "back");
            });
            $("#go-adopt").bind("click", function () {
                // Go to the previous slide
                $(".slider").diyslider("move", "forth");
            });

        });
    </script>
}
